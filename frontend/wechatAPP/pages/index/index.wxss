page{
  background-color: #29a0de;
}
.text{
  color: #fff;
  width: 100%;
  text-align: center;
  margin: 50rpx auto;
}
/* 顶部tag标签栏样式 */
.custom-tab {
  background-color: #29a0de; /* 设置选中标签的背景颜色 */
}
.nav-class{
  background-color: #29a0de;
  color: #fff;
}

/* 商品搜索 */
.search{
  width: 100%;
  position: fixed;
  top: 85rpx;
}


/* 表单 */
.info{
  width: 95%;
  border-radius: 20rpx;
  margin: 20rpx auto;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  background-color: #fff;
}
.info .title{
  width: 100%;
  text-align: center;
  margin-top: 20rpx;
  font-size: 35rpx;
  font-weight: bold;
  color: #29a0de;
}
.info .infobody{
  margin-top: 60rpx;
}
.info .stepper{
  display: flex;
  flex-direction: row;
  align-items: center;
  float: right;
  font-size: 28rpx;
  color: #999;
}

.btn{
  width: 100%;
  text-align: center;
  margin-top: 20rpx;
}
.btn .red{
  position: absolute;
  right: 50rpx;
  margin-top: 20rpx;
}


/* 须知 */
.tip{
  width: 100%;
  height: 180rpx;
  color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
.tip .known{
  font-size: 35rpx;
  font-weight: bold;
}

/* 商品内容展示 */
.content{
    width: 95%;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap; /* 元素自动换行 */
    justify-content: space-between;
    padding: 10rpx;
    margin-top: 90rpx;
}
