

.box{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  
  position: fixed;
  top: 0;
  left: 0;
}
.box .cover{
  width: 300rpx;
  height: 300rpx;
  padding: 0;
  border-radius: 20rpx;
  border: none;
}
.box .cover .pic{
  width: 300rpx;
  height: 300rpx;
  border-radius: 20rpx;
}
.box .info{
  width: 95%;
}
.box .btn{
  width: 50%;
  color: #fff;
  background-color: rgb(65, 140, 253);
  border-radius: 50rpx;
}