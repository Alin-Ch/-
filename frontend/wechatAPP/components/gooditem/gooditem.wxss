
.goodItem{
  width: 350rpx;
  height: 500rpx;
  background-color: #fff;
  border-radius: 20rpx;
  margin-top: 10rpx;
  padding-bottom: 10rpx;
}
.goodItem .pic{
  width: 100%;
  height: 350rpx;
  border-radius: 20rpx 20rpx 0 0;
}
.goodItem .goodinfo{
  padding: 0 10rpx;
  width: 100%;
  height: 150rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  color: #000;
}
.name{
  color: #333;
  font-size: 30rpx;
  font-weight: 600;
}
.desc{
  font-size: 25rpx;
  color: #666;
}
.name, .desc {
  white-space: nowrap; /* 不换行 */
  overflow: hidden; /* 超出部分隐藏 */
  text-overflow: ellipsis; /* 使用省略号代替 */
  max-width: 200px; /* 设置最大宽度 */
}
.price{
  font-weight: bold;
  color: #ff5100;
}
.price .sold{
  font-size: 25rpx;
  font-weight: normal;
  color: #7f7f7f;
  margin-left: 20rpx;
}